doctype html
html
  head
    link(href='https://fonts.googleapis.com/css?family=Revalia', rel='stylesheet')
    link(rel='stylesheet', type='text/css', href='/css/foundation.min.css')
    link(rel='stylesheet', type='text/css', href='/css/app.css')
  body
    if error
      #alert
        a.alert(href='#alert') #{error} is not valid. 
    #nav
      a(href='/') Home
    .container#container
      .row.height
        .small-8.small-offset-2.large-12.large-offset-0.medium-8.medium-offset-2.columns.height
          #contact-container
            h1#robo Contact Us
            .row
              .large-12.medium-12.small-12.columns
                form#form.topBefore(action='/contact', ,='', method='post')
                  .row
                    .small-12.medium-12.large-12.columns 
                      if error == "name"
                          input#name.error(name='name', type='text', placeholder='NAME' value=name)
                      else 
                          input#name(name='name', type='text', placeholder='NAME' value=name)
                      | 
                  .row
                    .small-12.medium-12.large-12.columns 
                      if error == "email"
                          input#email.error(name='email', type='text', placeholder='E-MAIL' value=email)
                      else 
                          input#email(name='email', type='text', placeholder='E-MAIL' value=email)
                      |
                  .row
                    .small-12.medium-12.large-12.columns 
                      if error == "message"
                          textarea.error#message(name='message', type='text', placeholder='MESSAGE' value=message)
                      else 
                          textarea#message(name='message', type='text', placeholder='MESSAGE' value=message)
                      | 
                  .row
                    .small-12.medium-12.large-12.columns  
                      input.button(type='submit', value='Contact')